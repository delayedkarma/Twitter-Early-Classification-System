  {
   "cell_type": "code",
   "execution_count": 42,
   "metadata": {},
   "outputs": [],
   "source": [
    "## Upsample the train set\n",
    "train_majority = train[train['Trouble?']==0]\n",
    "train_minority = train[train['Trouble?']==1]"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 43,
   "metadata": {},
   "outputs": [],
   "source": [
    "train_minority_upsampled = resample(train_minority, \n",
    "                                 replace=True,     \n",
    "                                 n_samples=347,    \n",
    "                                 random_state=42) "
   ]
  },
  {
   "cell_type": "code",
